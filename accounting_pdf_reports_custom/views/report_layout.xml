    <template id="report_agedpartnerbalance_custom" inherit_id="accounting_pdf_reports.report_agedpartnerbalance">
        <xpath expr="//t[@t-set='data_report_margin_top']" position="replace"/>
        <xpath expr="//t[@t-set='data_report_header_spacing']" position="replace"/>
        <xpath expr="//t[@t-call='web.internal_layout']"  position="before">
            <t t-set="company" t-value="res_company"/>
        </xpath>
        <xpath expr="//t[@t-call='web.internal_layout']"  position="attributes">
